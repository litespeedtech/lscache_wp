{
	"overrides": [
		{
			"files": ".prettierrc",
			"options": { "parser": "json" }
		},
		{
			"files": "**/*.{yml,yaml}",
			"options": { "tabWidth": 2 }
		}
	],
	"plugins": ["@prettier/plugin-php"],
	"arrowParens": "avoid",
	"braceStyle": "per-cs",
	"endOfLine": "auto",
	"phpVersion": "7.4",
	"printWidth": 180,
	"semi": true,
	"singleQuote": true,
	"tabWidth": 4,
	"trailingComma": "all",
	"trailingCommaPHP": true,
	"useTabs": true
}
